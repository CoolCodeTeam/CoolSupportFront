mixin input(name)
    label.input-block_label(for=name)
    if name === 'password'
        input.input-block_input-field.input-block_input-field_style(type=name id=name placeholder=name name=name)
    else
        input.input-block_input-field.input-block_input-field_style(type='text' id=name placeholder=name name=name)

if viewType === "login"
    - var ref  = '/login';
    - var mainTitle = 'Login';
    -var question = 'Not registered?'

block content
    form.register-form.register-form_style(method='POST' action=ref)
        div.register-form__form
            div.register-form__form__name-field.register-form__form__name-field_style.fluid-font-size_2=mainTitle
            div.input-block
                +input('email')
                +input('password')
                if viewType === "signUp"
                    +input('username')
                div.input-block_error-field.input-block_error-field_style
            button.register-form__form__button.register-form__form__button_style.fluid-font-size_1(type='submit')=mainTitle
